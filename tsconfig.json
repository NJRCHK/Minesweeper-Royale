{
	"compilerOptions": {
	  "jsx": "react",
	  "lib": ["es6", "dom"],
	  "rootDir": "app",
	  "module": "commonjs",
	  "target": "es5",
	  "sourceMap": true,
	  "moduleResolution": "node",
	  "noImplicitReturns": true,
	  "noImplicitThis": true,
	  "noImplicitAny": true,
	  "strictNullChecks": true,
	},
	"include": [
	  "./app/server",
	  "./app/shared",
	],
	"exclude": [
	  "node_modules",
	  "build",
	]
}